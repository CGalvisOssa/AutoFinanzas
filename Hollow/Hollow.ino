// ✅ AGREGAR ESTO:
void setup() {
  Serial.begin(115200);
  
  if(!display.begin(i2c_Address, true)) {
    Serial.println("Error OLED");
    while(1);
  }
  
  // Animación de entrada desde arriba
  for(int y = -64; y <= 0; y += 4) {
    display.clearDisplay();
    display.drawBitmap(0, y, hollowKnight, 128, 64, SH110X_WHITE);
    display.display();
    delay(30);
  }
  
  Serial.println("¡Hollow Knight apareció!");
}

void loop() {
  // Efecto de respiración
  for(int i = 0; i < 2; i++) {
    display.invertDisplay(true);
    delay(300);
    display.invertDisplay(false);
    delay(300);
  }
  delay(3000);
}
